{
    "name": "trading-app/php-version",
    "description": "PHP Trading Application converted from Node.js",
    "type": "project",
    "require": {
        "php": "^8.2",
        "slim/slim": "^4.0",
        "slim/psr7": "^1.6",
        "slim/http": "^1.3",
        "doctrine/dbal": "^3.0",
        "guzzlehttp/guzzle": "^7.2",
        "predis/predis": "^2.0",
        "stripe/stripe-php": "^9.0",
        "league/oauth2-client": "^2.7",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "^5.5",
        "firebase/php-jwt": "^6.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}