# Staging Environment Configuration
NODE_ENV=staging
PORT=3001

# Database
DATABASE_URL=postgresql://staging_user:password@staging-db.example.com/flint_staging

# Authentication
SESSION_SECRET=staging-session-secret-change-this
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=staging.flint.app

# SnapTrade API (Staging)
SNAPTRADE_CLIENT_ID=FLINT-STAGING
SNAPTRADE_CONSUMER_KEY=staging-consumer-key
SNAPTRADE_BASE_URL=https://api.snaptrade.com/api/v1

# Teller API (Staging)
TELLER_APP_ID=staging-app-id
TELLER_KEY_ID=staging-key-id
TELLER_PRIVATE_KEY=staging-private-key
TELLER_ENVIRONMENT=sandbox

# Stripe (Staging)
STRIPE_SECRET_KEY=sk_test_staging_key
STRIPE_WEBHOOK_SECRET=whsec_staging_secret
STRIPE_PRICE_BASIC=price_staging_basic
STRIPE_PRICE_PRO=price_staging_pro
STRIPE_PRICE_PREMIUM=price_staging_premium

# Market Data APIs (Staging)
POLYGON_API_KEY=staging-polygon-key
FINNHUB_API_KEY=staging-finnhub-key
ALPHA_VANTAGE_API_KEY=staging-alpha-vantage-key

# Monitoring (Staging)
SENTRY_DSN=https://staging@sentry.io/project-id
SENTRY_ENVIRONMENT=staging

# Email Service (Staging)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=staging-sendgrid-key
EMAIL_FROM=noreply@staging.flint.app

# Security
ENCRYPTION_KEY=staging-encryption-key-32-chars-here
ENCRYPTION_SALT=staging-salt-16-chars

# Feature Flags
FEATURE_DEMO_MODE=true
FEATURE_TRADING_ENABLED=true
FEATURE_CRYPTO_ENABLED=false