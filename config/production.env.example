# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://prod_user:password@prod-db.example.com/flint_production

# Authentication
SESSION_SECRET=production-session-secret-change-this-immediately
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=flint.app,www.flint.app

# SnapTrade API (Production)
SNAPTRADE_CLIENT_ID=FLINT-PROD
SNAPTRADE_CONSUMER_KEY=production-consumer-key
SNAPTRADE_BASE_URL=https://api.snaptrade.com/api/v1

# Teller API (Production)
TELLER_APP_ID=production-app-id
TELLER_KEY_ID=production-key-id
TELLER_PRIVATE_KEY=production-private-key
TELLER_ENVIRONMENT=production

# Stripe (Production)
STRIPE_SECRET_KEY=sk_live_production_key
STRIPE_WEBHOOK_SECRET=whsec_production_secret
STRIPE_PRICE_BASIC=price_production_basic
STRIPE_PRICE_PRO=price_production_pro
STRIPE_PRICE_PREMIUM=price_production_premium

# Market Data APIs (Production)
POLYGON_API_KEY=production-polygon-key
FINNHUB_API_KEY=production-finnhub-key
ALPHA_VANTAGE_API_KEY=production-alpha-vantage-key

# Monitoring (Production)
SENTRY_DSN=https://production@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Email Service (Production)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=production-sendgrid-key
EMAIL_FROM=noreply@flint.app

# Security
ENCRYPTION_KEY=production-encryption-key-32-chars
ENCRYPTION_SALT=production-salt-16-chars

# Feature Flags
FEATURE_DEMO_MODE=false
FEATURE_TRADING_ENABLED=true
FEATURE_CRYPTO_ENABLED=false